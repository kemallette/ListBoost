<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/left_nav_drawer_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start" >

        <LinearLayout
            android:id="@+id/content_container"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:background="#efefef"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:gravity="end" >

            <TextView
                android:id="@+id/welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:padding="10dp"
                android:text="@string/nav_link_welcome_and_instructions"
                android:textSize="22sp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/list_view_nav_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:padding="10dp"
                android:text="@string/boostlistview"
                android:textSize="22sp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/expandable_list_view_nav_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:padding="10dp"
                android:text="@string/boostexpandablelistview"
                android:textSize="22sp"
                android:typeface="sans" />
            
        </LinearLayout>
</LinearLayout>